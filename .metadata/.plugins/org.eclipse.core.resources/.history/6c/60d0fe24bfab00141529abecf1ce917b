package hello.application.web;

import hello.application.beans.Zip;
import hello.application.mongo.repo.ZipRepository;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/zips")
public class ZipController {
	
	@Resource(name="toto")
	private ZipRepository repository; 

	@RequestMapping("/")
	public Zip mainResponse(){
		return new Zip();
	}
	
	@RequestMapping("/state/{state}")
	public List<Zip> getFromStateName(@PathVariable String state){
		return repository.findByState(state);
	}
	
}
