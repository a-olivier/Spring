package hello.application.web;

import hello.application.beans.Zip;
import hello.application.mongo.repo.ZipsRepository;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/zips")
public class ZipController {
	
	@Autowired
	private ZipsRepository repository; 

	@RequestMapping("/")
	public Zip mainResponse(){
		return new Zip();
	}
	
	@RequestMapping("/state/{state}")
	public List<Zip> getFromStateName(@PathVariable String state){
		List<Zip> findAll = repository.findAll();
		
		System.out.println(findAll.get(32));
		
		return repository.findByState(state);
	}
	
}
